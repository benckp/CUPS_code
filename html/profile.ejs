  <script>
    const app = new Vue({
      el: '#app',
      data: {
        currentChoice: 0,
        currentCredit: 320,
        myPost: [],
        following: [],
        comments: [],
        credits: []
      },
      methods: {
        handleClick(e){
          this.currentChoice = e;
          console.log(this.currentChoice);
        }
      }
    });
  </script>
</body>
</html>
